# Main Database Configuration (Users, etc.)
DB_NAME=todosapp_development
DB_HOST=localhost
DB_PORT=5432
DB_POOL=5
DB_TIMEOUT=5000

# Todo Database Configuration (Separate database for todos)
TODO_DB_NAME=todos_development
TODO_DB_HOST=localhost
TODO_DB_PORT=5432
TODO_DB_POOL=5
TODO_DB_TIMEOUT=5000

# Application Environment
APP_ENV=development
DEBUG=false

# Security Settings
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=20

# Logging Settings
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (overrides APP_ENV defaults)
# LOG_LEVEL=INFO

# Optional: For production
# DB_NAME=todosapp_production
# DB_POOL=20
# DB_TIMEOUT=10000
